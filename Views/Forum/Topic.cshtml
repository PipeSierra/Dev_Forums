@model Dev_Forums.Models.Forum.ForumTopicModel

<h1>Bienvenido a @Model.Forum.Name Foro</h1>

@if (Model.Posts.Any())
{
<table class="table table-bordered table-hover">
	<tbody>
		@foreach (var post in Model.Posts)
		{
		<tr>
			<td>
				<a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
					@post.Title
				</a>
			</td>
		</tr>

		<tr>
			<td>
				@post.AuthorName
			</td>
		</tr>

		<tr>
			<td>
				@post.DatePosted
			</td>
		</tr>

		<tr>
			<td>
				@post.RepliesCount
			</td>
		</tr>
		}
	</tbody>
</table>

}
else
{
<div class="noPost">
	<h3>
		Parece que no hay @Model.Forum.Name aún. <br />
		Por qué no
		<a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
			<span>crear </span>
		</a>
		uno?
	</h3>
</div>
}

